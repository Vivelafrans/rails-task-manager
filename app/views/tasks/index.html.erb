<h1>All tasks</h1>
<ul> <% @tasks.each do |task|%>
  <li>
    <%if task.completed%>
    <input type="checkbox" checked>
    <% else %>
    <input type="checkbox">
    <% end %>
    <%= link_to task.title, task_path(task) %> <button> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </button> </li>
<%end%>
</ul>

<%= link_to "Add a new task", new_task_path %>
